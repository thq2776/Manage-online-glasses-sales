@{
        ViewBag.Title = "Giỏ Hàng";
    }

<link rel="stylesheet" type="text/css" href="~/Content/GiaoDien/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/GiaoDien/styles/categories_responsive.css">
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/">Trang Chủ</a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Giỏ hàng</a></li>
                </ul>
            </div>

            <!-- Sidebar -->
            <!-- Main Content -->

            <div class="row">
                <div class="col-md-12" id="load_data">
                    @Html.Action("Partial_Item_Cart", "ShoppingCart")
                    </div>
                    <div class="col-md-12">
                    @if (ViewBag.CheckCart != null)
                    {
                        <div class="text-right">
                            <a href="#" class="btn btn-danger btnDeleteAll">Xóa</a>
                            @if (Session["User"] != null)
                            {
                                @*<button type="submit" class="btn btn-success">Đặt hàng</button>*@
                                <a href="/thanh-toan" class="btn btn-success">Thanh toán</a>
                            }
                            else
                            {
                                <a href="/account/Login" class="btn btn-success">Đăng nhập để thanh toán</a>
                            }
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/GiaoDien/js/categories_custom.js"></script>
}

