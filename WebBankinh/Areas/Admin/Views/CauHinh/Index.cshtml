@model IEnumerable<WebBankinh.Models.EF.CauHinh>

@{
    ViewBag.Title = "Cấu Hình";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/cauhinh" class="nav-link">Cấu Hình</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cấu Hình Giao Diện</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang Chủ</a></li>
                    <li class="breadcrumb-item active">Cấu Hình</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Cấu Hình</h3>

@*            <div class="card-tools">
                <a href="/admin/cauhinh/add" class="btn btn-primary">Thêm Mới</a>
            </div>*@
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Banner 1</th>
                        <th>Banner 2</th>
                        <th>Banner 3</th>
                        <th>Banner 4</th>
                        <th>Banner 5</th>
                        <th>Số Điện Thoại</th>
                        <th>Địa Chỉ</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr id="trow_@item.Id">
                                <td>@i</td>
                                <td><img src="@item.Banner1" width="100" /></td> @*hiển thị ảnh ra *@
                                <td><img src="@item.Banner2" width="100" /></td> @*hiển thị ảnh ra *@
                                <td><img src="@item.Banner3" width="100" /></td> @*hiển thị ảnh ra *@
                                <td><img src="@item.Banner4" width="100" /></td> @*hiển thị ảnh ra *@
                                <td><img src="@item.Banner5" width="100" /></td> @*hiển thị ảnh ra *@
                                <td>@item.SoDienThoai</td>
                                <td>@item.DiaChi</td>
                                <td>@item.Email</td>
                                <td>
                                    <a href="/admin/CauHinh/edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a>
                                    @* <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xoá  </a>*@
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào</td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- /.card-body -->
            <div class="card-footer">

            </div>
        </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

</section>
<!-- /.content -->

