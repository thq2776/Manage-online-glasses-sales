@model WebBankinh.Models.EF.LoaiSanPham
@{
    ViewBag.Title = "Thêm Mới Loại Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/LoaiSanPham" class="nav-link">Loại Sản Phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm Mới</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm Mới Loại Sản Phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Loại Sản Phẩm</a></li>
                    <li class="breadcrumb-item active">Thêm Mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông Tin Thêm Mới Loại Sản Phẩm</h3>


        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("addlsp", "loaisanpham", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <!-- your steps content here -->
                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
@*                        <div class="form-group">
                            <label for="exampleInputPassword1">STT</label>
                            @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @Value = "1" })
                        </div>*@
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên Viết Tắt</label>
                            @Html.TextBoxFor(x => x.TenVietTat, new { @class = "form-control", @placeholder = "Tên Viết Tắt" })
                            @Html.ValidationMessageFor(x => x.TenVietTat, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Tên Loại Sản Phẩm</label>
                            @Html.TextBoxFor(x => x.TenLoai, new { @class = "form-control", @placeholder = "Tên Loại Sản Phẩm" })
                            @Html.ValidationMessageFor(x => x.TenLoai, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Ghi Chú</label>
                            @Html.TextAreaFor(x => x.GhiChu, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <a href="/admin/LoaiSanPham" class="btn btn-danger">Trở Về</a>
                            <button type="submit" class="btn btn-primary">Thêm Loại Sản Phẩm</button>
                        </div>
                    </div>
                }

            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
