@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" type="text/css" href="~/Content/GiaoDien/styles/contact_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/GiaoDien/styles/contact_responsive.css">

<div class="container contact_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/">Trang Chủ</a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Người dùng</a></li>
                </ul>
            </div>

        </div>
    </div>
    @*
        <div class="blogs">
            <div class="container">
                <div class="row">*@
    <div class="col text-center">
        <div class="section_title">
            <h2>TRANG NGƯỜI DÙNG</h2>
        </div>
    </div>
    @*</div>*@
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Thông tin người dùng</h3>

                <div class="card-tools">
                    @* <a href="#" class="btn btn-primary">Thêm Mới</a>*@
                </div>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Họ Tên</th>
                            <th>Địa Chỉ</th>
                            <th>Số Điện Thoại</th>
                            <th>Email</th>
                            @*<th>Mật khẩu</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @if (Session["User"] != null)
                        {
                            WebBankinh.Models.EF.NguoiDung nd = (
                            WebBankinh.Models.EF.NguoiDung)Session["User"];
                            {
                            <td>@nd.Name</td>
                            <td>@nd.DiaChi</td>
                            <td>@nd.SoDienThoai</td>
                            <td>@nd.Email</td>
                            <td>
                                <a href="/user/edit/@nd.Id" class="btn btn-sm btn-primary">Sửa thông tin</a>                                
                            </td>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Chưa có thông tin người dùng!!</td>
                        </tr>
                    }
                        @*<a href="/Account/ResetPassword" class="btn btn-sm btn-primary">Sửa</a>*@
                        </tbody>
                    </table>

                <!-- /.card-body -->
                <div class="card-footer">

                </div>
                <!-- /.card-footer-->
            </div>
            <!-- /.card -->

    </section>

    @section scripts{
        <script src="~/Content/GiaoDien/js/contact_custom.js"></script>
    }
